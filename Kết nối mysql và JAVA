import java.sql.SQLException;

public class test {
    private static String url = "jdbc:mysql://localhost:3306/northwind?autoReconnect=true&useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true";
    private static String username = "root";
    private static String password = "";

    public static Connection getConnection() {
        Connection conn = null;
        try {
            conn = DriverManager.getConnection(url, username, password);
            System.out.println("‚úÖ K·∫øt n·ªëi MySQL th√†nh c√¥ng!");
        } catch (SQLException e) {
            System.err.println("‚ùå L·ªói k·∫øt n·ªëi MySQL:");
            e.printStackTrace();
        }
        return conn;
    }

    public static void main(String[] args) {
        Connection conn = getConnection();
        if (conn != null) {
            try {
                conn.close();
                System.out.println("üîå ƒê√£ ƒë√≥ng k·∫øt n·ªëi.");
            } catch (SQLException e) {
                e.printStackTrace();
