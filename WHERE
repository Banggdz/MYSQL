1.Truy vấn các thành phố khác nhau xuất hiện trong bảng Customers
SELECT DISTINCT City
FROM Customers;

2.Liệt kê những khách hàng sống tại Berlin trong bảng Customers
SELECT *
FROM customers
WHERE city like 'berlin'
--SELECT * FROM Customers WHERE City = 'Berlin';

3.Liệt kê những khách hàng không sống tại Berlin trong bảng Customers
SELECT *
FROM customers
WHERE strcmp(city,"Berlin")!=0
WHERE city <> "berlin"
WHERE NOT city = "berlin";

4.Liệt kê những khách hàng sống tại thành phố London và có mã khách hàng là số
chẵn
WHERE city = "london" and MOD(CustomerID,2)=0

5.Liệt kê những khách hàng có tên bắt đầu bằng chữ A
WHERE CustomerName like "a%"

6. Liệt kê những khách hàng có tên bắt đầu bằng chữ A, B hoặc D
WHERE CustomerName LIKE 'A%'
   OR CustomerName LIKE 'B%'
   OR CustomerName LIKE 'D%';

7. Liệt kê những khách hàng có tên bắt đầu bằng chữ A và kết thúc bằng chữ e
WHERE CustomerName like "%e"

8. Liệt kê những khách hàng có tên có độ dài tối thiểu là 25
WHERE length(CustomerName)>=25

9. Liệt kê những khách hàng có tên kết thúc bởi “sen”
WHERE CustomerName like "%sen"

10. Liệt kê những khách hàng có tên bắt đầu bởi “cen”
WHERE CustomerName like "cen%"

11. Liệt kê những khách hàng có tên có thứ tự từ điển lớn hơn “Harani Canes”
WHERE strcmp(CustomerName, 'Harani Canes')=1
WHERE CustomerName>'Harani Canes'

12.Liệt kê nhân viên sinh năm 1968
WHERE YEAR(BirthDate)=1968
13. Liệt kê nhân viên sinh vào tháng 2
WHERE month(BirthDate)=2
14. Liệt kê nhân viên sinh ngày mồng 2
WHERE DAY(BirthDate)=2

15.Liệt kê khách hàng trong tên chứa cụm “ar”
WHERE CustomerName like '%ar%'

16.Liệt kê khách hàng có tên bắt đầu bằng “B” và kết thúc bằng “e”
WHERE CustomerName like 'b%e'

17. Liệt kê khách hàng có chữ cái thứ 2 trong tên là chữ “r”
WHERE CustomerName like '_r%'

18. Liệt kê khách hàng có chữ cái thứ 3 từ cuối về trong tên là chữ “h”
WHERE CustomerName like '%h__'

19. Liệt kê khách hàng có tên bắt đầu bằng 1 trong các chữ cái ‘a’, ‘b’, ‘h’, ‘d’
WHERE CustomerName regexp '^[abhd]'

20. Liệt kê khách hàng có tên kết thúc bằng 1 trong các chữ cái ‘a’, ‘b’, ‘h’, ‘d’
WHERE CustomerName regexp '[abhd]$'

21.Liệt kê những khách hàng và thông tin đơn hàng đã đặt hàng vào tháng 7 năm
1996
FROM customers,orders 
Where customers.customerid=orders.customerid and YEAR(OrderDate)=1996 and MONTH(OrderDate)=7

22. Liệt kê những khách hàng và thông tin đơn hàng đã đặt hàng vào tháng 12 năm
1996 và sống tại Mỹ
Where customers.customerid=orders.customerid and YEAR(OrderDate)=1996 and MONTH(OrderDate)=7 and Country="USA"

23. Liệt kê những khách hàng và thông tin đơn hàng đã đặt hàng sau ngày 09-10-
1996 và sống tại London
Where customers.customerid=orders.customerid and DATE(OrderDate)>'1996-10-08'

24. Liệt kê những khách hàng đã đặt hàng vào tháng 10 năm 1996 và được ship bởi
shipper có ID là 3
Where customers.customerid=orders.customerid AND orders.ShipperID=shippers.ShipperID and YEAR(OrderDate)=1996 and MONTH(OrderDate)=10 and SHIPPERS.ShipperID=2

25. Liệt kê những khách hàng và thông tin đơn hàng được xử lý bởi nhân viên có
ID là 4
FROM CUSTOMERS,employees,orders
Where customers.customerid=orders.customerid  AND Orders.EmployeeID = Employees.EmployeeID   AND Employees.EmployeeID = 4;

26.Liệt kê thông tin những đơn hàng được xử lý bởi nhân viên có FirstName là
“Nancy”
FROM employees,orders
Where Orders.EmployeeID = Employees.EmployeeID   AND Employees.firstname = 'Nancy'; 

27.Liệt kê những sản phẩm được mua trong đơn hàng có ID là 10249
FROM orderdetails,products
WHERE orderdetails.productID=products.productID and orderdetails.orderID=10249
